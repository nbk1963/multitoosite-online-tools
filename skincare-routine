    <script>
        // Toggle between AM and PM routines
        const amToggle = document.getElementById('am-toggle');
        const pmToggle = document.getElementById('pm-toggle');
        const amRoutine = document.getElementById('am-routine');
        const pmRoutine = document.getElementById('pm-routine');
        
        amToggle.addEventListener('click', () => {
            amToggle.classList.add('active');
            pmToggle.classList.remove('active');
            amRoutine.classList.add('active');
            pmRoutine.classList.remove('active');
        });
        
        pmToggle.addEventListener('click', () => {
            pmToggle.classList.add('active');
            amToggle.classList.remove('active');
            pmRoutine.classList.add('active');
            amRoutine.classList.remove('active');
        });
        
        // Skin type selector interaction
        const skinTypes = document.querySelectorAll('.skin-type');
        
        skinTypes.forEach(type => {
            type.addEventListener('click', () => {
                skinTypes.forEach(t => t.classList.remove('active'));
                type.classList.add('active');
                
                // Show skin type selection feedback
                const skinType = type.textContent;
                console.log(`Skin type selected: ${skinType}`);
                
                // In a real app, this would update the routine based on skin type
                // For now, we'll just update a subtle visual cue
                const cards = document.querySelectorAll('.card');
                cards.forEach(card => {
                    card.style.border = '2px solid transparent';
                });
                
                // Add a subtle border to cards to show customization
                setTimeout(() => {
                    cards.forEach(card => {
                        card.style.border = `2px solid var(--pink-medium)`;
                    });
                }, 100);
                
                setTimeout(() => {
                    cards.forEach(card => {
                        card.style.border = '2px solid transparent';
                    });
                }, 1000);
            });
        });
        
        // Add hover effects to cards for better interactivity
        const cards = document.querySelectorAll('.card');
        cards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });
    </script>
